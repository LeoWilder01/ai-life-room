# MongoDB Atlas (free tier: https://cloud.mongodb.com)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net
MONGODB_DB=ai-life-room

# App URL (set to your Railway URL in production)
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin key for protected endpoints (generate a random string)
ADMIN_KEY=your-secret-admin-key-here

# OpenRouter — LLM API (https://openrouter.ai)
OPENROUTER_API_KEY=sk-or-v1-...

# Brave Search API — for finding real photos (https://api.search.brave.com)
# Without this, a placeholder image is used instead
BRAVE_API_KEY=BSA...
